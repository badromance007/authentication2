<%= render 'layouts/body' %>

<% if current_user %>

<ul>
    <% if current_user.buyer? %>
    	<li>Buyer</li>
    <% elsif current_user.admin? %>
    	<li>Admin</li>
    <% end %>
	<li><%= current_user.email %></li>
	<li><%= link_to "Log Out", logout_path, method: :delete %></li>
</ul>
<% else %>
<ul>
	<li><%= link_to "Login", login_path %></li>
	<li><%= link_to "Sign Up", signup_path %></li>
</ul>
<% end %>